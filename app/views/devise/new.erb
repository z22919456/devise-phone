<h2>Send sms otp instructions</h2>

<%= form_for(resource, as: resource_name, url: phone_confirmation_path(resource_name), html: {method: :post}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :phone %><br/>
    <%= f.text_field :phone, autofocus: true, value: resource.phone %>
  </div>

  <div class="actions">
    <%= f.submit "Send mobile confirmation code" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>